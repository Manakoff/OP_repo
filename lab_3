#include <iostream>
#include <cmath>
using namespace std;


int main()
{
    setlocale(LC_ALL, "RU");
    // ЗАДАНИЕ № 1
    int n;
    cout << "Введите кол-во элементов: ";
    cin >> n;

    int maximum = 0, sum = 0, k = 0;
    
    for (int i = 1; i <= n; i++)
    {
        int number;
        cout << "Введите число: ";
        cin >> number;

        if (number % 10 == 2)
        {
            sum += number;
            if (number > maximum)
            {
                maximum = number;
                k = i;
            }
        }
    }
    
    cout << "Сумма: " << sum << " Позиция максимального числа: " << k << " Максимальное число: " << maximum << endl;
    // ЗАДАНИЕ № 2 

    cout << "Введите число |x| < 1000: ";
    short x;
    cin >> x;
    short len = 0;

    short sym = 1;
    if (x < 0)
        sym = (-1);

    x = abs(x);

    if (x < 10)
    {
        cout << "Обратного ему нет!" << endl;
    }
    else if (x < 100)
    {
        len = 1;
    }
    else
        len = 2;
 
    short res = 0;

    while (x != 0)
    {
        res += (x % 10) * pow(10, len);
        x = int(x / 10);
        len -= 1;

    }
    
    res = sym * x;
    cout << res << endl;

    return 0;
}
